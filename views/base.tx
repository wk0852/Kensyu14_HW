<script type="text/javascript">
$(function(){
   
  $('#input-form').submit(function () {
    input_form = this;
    $.ajax({
      type: 'POST',
      url: input_form.action,
      data: $(input_form).serialize(),
      success: function(data) {
	      location.href = data.location;
      },
      error: function(e) {
      },
      dataType: 'json'
    });
    return false;
  });
  
  $('#delAllBtn').click(function() {
    $.ajax({
      type: 'POST',
      url: $(this).val(),
      data: null,
      success: function(data) {
 	      location.href = data.location;
      },
      error: function(e) {
      },
      dataType: 'json'
    });
  });

});
